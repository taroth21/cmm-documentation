                        rowsep="1">
                    <tgroup
                            cols="2">
                        <colspec
                            colname="col2" colnum="1"
                            colwidth="1*"/>
                        <colspec
                            colname="col3" colnum="2"
                                    colwidth="1.34*"/>
                        <thead>
                            <row>
                                <entry
                                    colname="col2">Chapter</entry>
                                <entry
                                    colname="col3">Description</entry>
                            </row>
                        </thead>
                        <tbody>
                            <row>
                                <entry
                                    colname="col2"><xref
                                    href="../../shared/intro/c-intro.xml"/></entry>
                                <entry
                                    colname="col3">Introduces <ph
                                    conref="../../shared/product-name.xml#ProductNameTopic/Product_Abbr"/>, its architecture, and users.</entry>
                            </row>
                            <row>
                                <entry
                                    colname="col2"><xref
                                    href="../install/c-cmmoinstall.xml"/></entry>
